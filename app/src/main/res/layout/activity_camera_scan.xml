<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraScanActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/pv_camera_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillStart"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_camera_scan_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_height="550dp"
            android:layout_width="450dp"
            tools:src="@drawable/scan_layout"/>

        <Button
            android:id="@+id/btn_camera_scan_result"
            android:layout_width="298dp"
            android:layout_height="50dp"
            android:alpha="0"
            android:layout_marginTop="640dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:backgroundTint="@color/green_02"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:text="@string/btn_result_scanning" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>